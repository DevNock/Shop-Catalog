<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:Catalog="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cvoffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        Catalog:cardCornerRadius="4dp"
        android:layout_margin="2dp"
        style="@style/CardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/offer_photo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                />

            <TextView
                android:id="@+id/offer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/offer_photo"
                android:textSize="16dp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/offer_weight"
                android:layout_below="@+id/offer_name"
                android:layout_toRightOf="@+id/offer_photo"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/offer_price"
                android:layout_below="@+id/offer_name"
                android:layout_toRightOf="@+id/offer_weight"

                />



        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>